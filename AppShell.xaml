<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoPrograFinalDefinitivoP2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoPrograFinalDefinitivoP2.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent Route="Register" IsVisible="False" ContentTemplate="{DataTemplate views:Login}"/>
        
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Login}"
        />

        <ShellContent
        Title="Dogs"
        ContentTemplate="{DataTemplate views:DogPage}"
        />

        <ShellContent
        Title="Upload a Dog"
        ContentTemplate="{DataTemplate views:UploadDog}"
        Route="MainPage" />

        <ShellContent
        Title="Adoption Form"
        ContentTemplate="{DataTemplate views:FormPage}"
        />

        
    </TabBar>

</Shell>
