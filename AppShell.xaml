<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoPrograFinalDefinitivoP2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoPrograFinalDefinitivoP2.Views"
    Shell.FlyoutBehavior="Flyout">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:Login}"
        />
    </FlyoutItem>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Dogs"
        ContentTemplate="{DataTemplate views:DogPage}"
        />
    </FlyoutItem>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Upload a Dog"
        ContentTemplate="{DataTemplate views:UploadDog}"
        />

    </FlyoutItem>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Adoption Form"
        ContentTemplate="{DataTemplate views:FormPage}"
        />
    </FlyoutItem>
    
</Shell>
